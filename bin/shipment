#!/bin/bash
set -e

VERSION="0.0.3"
BRIDGE_IP=172.17.42.1

DIR=$(dirname $0)

usage() {
  cat <<-EOF

  Usage: shipment [command]

  Commands:

EOF

for f in $DIR/shipment-*; do
  cmd=${f:24}
  printf "    %-20s %-50s\n" "$cmd" "$($f _description)"
done
echo

exit
}

version() {
  echo $VERSION
}

log() {
  echo -e "  \e[33m$@\e[39m"
}

abort() {
  echo
  echo -e "  \e[31m$@\e[39m" 1>&2
  echo
  exit 1
}

check_sudo() {
  if [[ $(/usr/bin/id -u) -ne 0 ]]; then
    echo "Must run as root"
    exit
  fi
}

redis() {
  cmd="exec redis-cli -h \"\$REDIS_PORT_6379_TCP_ADDR\" -p \"\$REDIS_PORT_6379_TCP_PORT\" $@"
  sudo docker run --link hipache:redis --rm hipache sh -c "$cmd"
}

if [ "$#" == 0 ]; then
  usage
fi

CMD=$1
shift
case $CMD in
  --version)
    version
    exit
    ;;
  *)
    exec="$DIR/shipment-$CMD"
    if [ -f "$exec" ]; then
      . $exec $@
    else
      log "command doesn't exist"
      usage
    fi
    ;;
esac

