#!/bin/bash
set -e

IDONLY=0
PORT=${SHIPMENT_PORT:-5000}

while getopts "in:p:d:t:" OPTION "$@"; do
  case $OPTION in
    n) NAME=$OPTARG;;
    t) TAG=$OPTARG;;
    p) PORT=$OPTARG;;
    d) DOCKERARGS=$OPTARG;;
    i) IDONLY=1;;
  esac
done

CONTAINER_ID=$(sudo docker run -d -p $PORT -e PORT=$PORT $DOCKERARGS shipment/$NAME:$TAG)
echo $CONTAINER_ID
