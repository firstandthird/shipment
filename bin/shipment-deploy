#!/bin/bash
set -e

if [ "$1" == "_description" ]; then
  echo "Deploy app"
  exit
fi

usage_deploy() {
  echo "shipment deploy [options] [app name]"
}

if [ "$#" == 0 ]; then
  usage_deploy
  exit
fi


main() {
  local scale=1

  while getopts ":s::" OPTION "$@"; do
    case $OPTION in
      s) scale=$OPTARG;shift;shift;;
    esac
  done
  local name=$@

  log "Getting running containers"
  local running=$(shipment running -i $name)

  log "Fetching latest..."
  shipment fetch $name
  log "Building..."
  shipment build $name
  log "Running new container..."
  shipment run $name

  sleep 3

  log "Killing running docker containers..."
  for i in ${running[@]}; do
    shipment stop -i $i
  done

  shipment scale $name $scale


}

main "$@"
